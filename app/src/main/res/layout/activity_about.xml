<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    android:clipToPadding="false"
    android:padding="24dp">

    <!-- LinearLayout ini memegang semua kandungan dan meletakkannya di tengah skrin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- 1. Logo Aplikasi -->
        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_launcher" />

        <!-- 2. Tajuk "About" -->
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/about_title"
            android:textColor="@color/gold_primary"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- 3. Maklumat Peribadi -->
        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/about_fullname"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvStudentNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/about_student_no"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvProgramme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/about_programme"
            android:textAlignment="center"
            android:textSize="16sp" />

        <!-- 4. Pautan GitHub -->

        <TextView
            android:id="@+id/tvSourceCodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="@string/about_source_code_title"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGithubLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:text="@string/github_url"
            android:textAlignment="center"
            android:textSize="16sp" />

        <!-- 5. Notis Hak Cipta -->
        <TextView
            android:id="@+id/tvCopyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_copyright"
            android:textAlignment="center"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>
